
@{
    ViewBag.Title = "巡檢類別維護";
}

<h3>
    <b>巡檢類別維護</b>
</h3>

<div class="card">

    <div class="card-header">
        @using (Ajax.BeginForm("GetClassList", "InspectClass", new AjaxOptions
        {
            HttpMethod = "POST",
            OnBegin = "$.Toast.showToast({ 'title': '搜尋中，請稍待...', 'icon': 'loading', 'duration': 0 })",
            OnSuccess = "showmsg",
            UpdateTargetId = "pnlClass"
        }, new { id = "searchForm" }))
        {
            <div class="container form-horizontal">
                <div class="row">
                    <div class="form-group col-md-3">
                        <label class="control-label col-md-auto">區域:</label>
                        <div class="col-md-auto">
                            @Html.DropDownList("AreaId", null, htmlAttributes: new { @class = "form-control" })
                        </div>
                    </div>
                    <div class="form-group col-md-3">
                        <label class="control-label col-md-auto">班別:</label>
                        <div class="col-md-auto">
                            <select class="form-control" id="shiftId" name="ShiftId" required>
                                <option disabled selected>請先選擇區域</option>
                            </select>
                        </div>
                    </div>
                </div>

                <div class="row">
                    <div class="form-group col-md-3">
                        <div class="col-md-12">
                            <input type="button" class="btn btn-primary" id="btnQuery" value="查詢" />
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>

    <div class="card-body" id="pnlClass">
    </div>

</div>


    <script>
        $.fn.addItems = function (data) {
            return this.each(function () {
                var list = this;
                $.each(data, function (val, text) {

                    var option = new Option(text.text, text.value);
                    list.add(option);
                });
            });
        };
        $(function () {
            var getShiftURL = '@Url.Action("GetShifts", "InspectClass", new { Area = "Admin" })';
            // Get shifts.
            $('#AreaId').change(function () {
                $.ajax({
                    url: getShiftURL,
                    type: "GET",
                    dataType: "json",
                    data: { AreaId: $(this).val() },
                    async: false,
                    success: function (data) {
                        var select = $('#shiftId');
                        console.log(select);
                        $('option', select).remove();
                        select.addItems(data);
                    }
                });
            });
        });
    </script>
