@model IEnumerable<InspectSystem.Models.DEquipment.DECyclesInAreas>

@{
    ViewBag.Title = "區域對應週期列表";
}

<h3>
    <b>區域對應週期列表</b>
</h3>

<p>
    <a class="btn btn-primary" href="@Url.Action("Create")">新增區域對應週期</a>
</p>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.DEInspectArea.AreaName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.DEInspectCycle.CycleName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Status)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Rtp)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Rtt)
        </th>
        <th>
            功能
        </th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.DEInspectArea.AreaName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DEInspectCycle.CycleName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Status)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.RtpName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Rtt)
            </td>
            <td>
                <a class="btn btn-primary" href="@Url.Action("Edit", new { areaId = item.AreaId, cycleId = item.CycleId })">編輯</a>
            </td>
        </tr>
    }

</table>
