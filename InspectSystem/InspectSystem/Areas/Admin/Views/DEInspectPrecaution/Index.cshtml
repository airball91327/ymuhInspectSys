@model IEnumerable<InspectSystem.Models.InspectPrecautions>

@{
    ViewBag.Title = "新增注意事項";
}

<h2>
    <b>注意事項維護</b>
</h2>

<a class="btn btn-primary" href="@Url.Action("Create")">新增事項</a>
<br />
<br />

<table class="table table-hover">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.InspectArea.AreaName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Content)
        </th>
        <th>
            功能
        </th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.InspectArea.AreaName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Content)
            </td>
            <td>
                @Html.ActionLink("內容編輯", "Edit", new { id = item.PrecautionId }, new { @class = "btn btn-primary" })
                @Html.ActionLink("刪除", "Delete", new { id = item.PrecautionId }, new { @class = "btn btn-primary" })
            </td>
        </tr>
    }

</table>
