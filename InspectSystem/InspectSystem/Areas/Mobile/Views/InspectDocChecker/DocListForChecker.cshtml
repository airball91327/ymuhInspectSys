@model IEnumerable<InspectSystem.Models.InspectDocs>

@Scripts.Render("~/bundles//jquery")
<link rel="stylesheet" href="~/Content/MobileStyle/MyMobileTabStyle.css" />

@{
    ViewBag.Title = "主管審核頁面";

    if (TempData["SendMsg"] != null)
    {
        <script>
            var message = @Html.Raw(Json.Encode(TempData["SendMsg"]));
            alert(message);
        </script>
    }
}
<h2 class="text-center">
    <b>主管審核頁面</b>
</h2>
<hr />

<h4 class="text-center"><b>審核中</b></h4>
@foreach (var item in Model)
{
    if (item.FlowStatusID == 1)
    {
        <div class="tab row">
            <button class="col-xs-12" onclick="location.href='@Url.Action("DocDetailsChecker", new { area = "Mobile", docID = item.DocID })'">

                <div>
                    <h4 class="col-xs-12">
                        @Html.DisplayFor(modelItem => item.InspectAreas.AreaName)
                    </h4>
                </div>

                <div>
                    <span class="col-xs-4">@Html.DisplayNameFor(model => model.InspectFlowStatusTable.FlowStatusName)</span>
                    <span class="col-xs-8">@Html.DisplayFor(model => item.InspectFlowStatusTable.FlowStatusName)</span>
                </div>

                <div>
                    <span class="col-xs-4">@Html.DisplayNameFor(model => model.Date)</span>
                    <span class="col-xs-8">@Html.DisplayFor(modelItem => item.Date)</span>
                </div>

                <div>
                    <span class="col-xs-4">@Html.DisplayNameFor(model => model.EndTime)</span>
                    <span class="col-xs-8">@Html.DisplayFor(modelItem => item.EndTime)</span>
                </div>

                <div>
                    <span class="col-xs-4">@Html.DisplayNameFor(model => model.WorkerName)</span>
                    <span class="col-xs-8">@Html.DisplayFor(modelItem => item.WorkerName)</span>
                </div>

                <div>
                    <span class="col-xs-4">@Html.DisplayNameFor(model => model.CheckerName)</span>
                    <span class="col-xs-8">@Html.DisplayFor(modelItem => item.CheckerName)</span>
                </div>
            </button>
        </div>
    }
}

<h4 class="text-center"><b>審核退回</b></h4>
@foreach (var item in Model)
{
    if (item.FlowStatusID == 0)
    {
        <div class="tab row">
            <button class="col-xs-12" disabled>
                <div>
                    <h4 class="col-xs-12">
                        @Html.DisplayFor(modelItem => item.InspectAreas.AreaName)
                    </h4>
                </div>

                <div>
                    <span class="col-xs-4">@Html.DisplayNameFor(model => model.InspectFlowStatusTable.FlowStatusName)</span>
                    <span class="col-xs-8">@Html.DisplayFor(model => item.InspectFlowStatusTable.FlowStatusName)</span>
                </div>

                <div>
                    <span class="col-xs-4">@Html.DisplayNameFor(model => model.Date)</span>
                    <span class="col-xs-8">@Html.DisplayFor(modelItem => item.Date)</span>
                </div>

                <div>
                    <span class="col-xs-4">@Html.DisplayNameFor(model => model.EndTime)</span>
                    <span class="col-xs-8">@Html.DisplayFor(modelItem => item.EndTime)</span>
                </div>

                <div>
                    <span class="col-xs-4">@Html.DisplayNameFor(model => model.WorkerName)</span>
                    <span class="col-xs-8">@Html.DisplayFor(modelItem => item.WorkerName)</span>
                </div>

                <div>
                    <span class="col-xs-4">@Html.DisplayNameFor(model => model.CheckerName)</span>
                    <span class="col-xs-8">@Html.DisplayFor(modelItem => item.CheckerName)</span>
                </div>
            </button>
        </div>
    }
}

<h4 class="text-center"><b>工程師尚未送出</b></h4>
@foreach (var item in Model)
{
    if (item.FlowStatusID == 3)
    {
        <div class="tab row">
            <button class="col-xs-12" disabled>
                <div>
                    <h4 class="col-xs-12">
                        @Html.DisplayFor(modelItem => item.InspectAreas.AreaName)
                    </h4>
                </div>

                <div>
                    <span class="col-xs-4">@Html.DisplayNameFor(model => model.InspectFlowStatusTable.FlowStatusName)</span>
                    <span class="col-xs-8">@Html.DisplayFor(model => item.InspectFlowStatusTable.FlowStatusName)</span>
                </div>

                <div>
                    <span class="col-xs-4">@Html.DisplayNameFor(model => model.Date)</span>
                    <span class="col-xs-8">@Html.DisplayFor(modelItem => item.Date)</span>
                </div>

                <div>
                    <span class="col-xs-4">@Html.DisplayNameFor(model => model.WorkerName)</span>
                    <span class="col-xs-8">@Html.DisplayFor(modelItem => item.WorkerName)</span>
                </div>

                <div>
                    <span class="col-xs-4">@Html.DisplayNameFor(model => model.CheckerName)</span>
                    <span class="col-xs-8">@Html.DisplayFor(modelItem => item.CheckerName)</span>
                </div>
            </button>
        </div>
    }
}