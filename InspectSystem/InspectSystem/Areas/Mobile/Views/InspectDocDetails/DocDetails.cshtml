@model IEnumerable<InspectSystem.Models.ClassesOfAreas>

@Scripts.Render("~/bundles//jquery")
<link rel="stylesheet" type="text/css" href="~/Content/MobileStyle/MyStyleForDocDetail.css">

@{
    ViewBag.Title = "項目選擇";
}

<style>
    h3 {
        font-weight: bold;
        text-align: center;
    }
</style>

<h3>@ViewBag.AreaName - 預覽</h3>
<hr />
<div class="container">
    <a class="btn btn-primary btn-block btn-lg" href="@Url.Action("SelectClass", new { area = "Mobile", areaID = ViewBag.AreaId })">回到編輯畫面</a>
</div>
<hr />

<div class="container">
    @foreach (var item in Model)
    {
        <a class="btn btn-primary btn-block btn-lg" href="@Url.Action("ClassContentOfArea", new { area = "Mobile", acid = @item.ACID, DocId = @ViewBag.DocId })" id="@item.ClassId">
            @*@if (item.IsSaved == true)
            {
                <span class="glyphicon glyphicon-ok"></span>
            }*@
            @item.InspectClasses.ClassName
            @if (item.CountErrors != 0)
            {
                <span class="circle">@item.CountErrors</span>
            }
        </a>
    }
    <a class="btn btn-primary btn-block btn-lg" id="flowDocBtn" style="margin-top: 50px" href="@Url.Action("FlowDocEdit", new { area = "Mobile", DocId = ViewBag.DocId })">簽核作業</a>
</div>
