@model InspectSystem.Models.SelectUserVModel

<script src="~/Scripts/SelectUser.js"></script>

<div class="form-horizontal">
    @*<h4>人員選擇器</h4>
    <hr />*@
    <div class="form-group">
        @Html.LabelFor(model => model.Susername, htmlAttributes: new { @class = "control-label col-md-auto" })
        <div class="col-md-auto text-left">
            <div class="form-inline">
                @Html.EditorFor(model => model.Susername, new { htmlAttributes = new { @class = "form-control" } })
                <input id="btnQuname" type="button" value="查詢" class="btn btn-outline-primary" />
                @Html.ValidationMessageFor(model => model.Susername, "", new { @class = "text-danger" })
            </div>
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(model => model.Sdptname, htmlAttributes: new { @class = "control-label col-md-auto" })
        <div class="col-md-auto text-left">
            <div class="form-inline">
                @Html.EditorFor(model => model.Sdptname, new { htmlAttributes = new { @class = "form-control" } })
                <input id="btnQdname" type="button" value="查詢" class="btn btn-outline-primary" />
                @Html.ValidationMessageFor(model => model.Sdptname, "", new { @class = "text-danger" })
            </div>
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(model => model.Suserid, htmlAttributes: new { @class = "control-label col-md-auto" })
        <div class="col-md-auto">
            @Html.DropDownListFor(model => model.Suserid, null, new { @class = "form-control" })
            <img id="imgLOADING" src="~/Content/Images/opc-ajax-loader.gif" style="display: none" />
            @Html.ValidationMessageFor(model => model.Suserid, "", new { @class = "text-danger" })
        </div>
    </div>
</div>


