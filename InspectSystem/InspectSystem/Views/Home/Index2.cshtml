@model InspectSystem.Models.UnsignCountsVModel
@{
    ViewBag.Title = "簽核列表";
}

<div class="container">
    <h4>個人首頁</h4>

    <ul class="nav nav-tabs">
        <li class="nav-item">
            <a class="nav-link active" data-toggle="tab" href="#home">一般巡檢&nbsp;<span class="badge badge-pill badge-primary">@Model.InspectCount</span></a>
        </li>
        <li class="nav-item">
            <a class="nav-link" data-toggle="tab" href="#menu1">危險性設備巡檢&nbsp;<span class="badge badge-pill badge-primary">@Model.DEInspectCount</span></a>
        </li>
    </ul>

    <div class="tab-content">
        <div id="home" class="container tab-pane fade show active">
            <p>@Html.Action("Index", "InspectDocIdTable")</p>
        </div>
        <div id="menu1" class="container tab-pane fade ">
            <p>@Html.Action("Index", "DEInspectDoc")</p>
        </div>
    </div>
</div>


@section Scripts{
    <script src="~/Scripts/jquery.unobtrusive-ajax.js"></script>
    <script src="~/Scripts/jquery.toast.js"></script>

    <script type="text/javascript">
        $(document).ready(function () {
            //$('.combobox').combobox();
            submitFormINSPECT();
        });
        function showmsg(data) {
            if (data.success == null) {
                // search success.
                $.Toast.hideToast();
            }
            else {
                if (data.success === false) {
                    alert(data.error);
                    $.Toast.hideToast();
                }
            }
        }
    </script>
}

