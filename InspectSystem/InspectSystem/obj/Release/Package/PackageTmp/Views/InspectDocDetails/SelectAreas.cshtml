@model IEnumerable<InspectSystem.Models.InspectAreas>

<link rel="stylesheet" href="~/Content/w3.css">
@Scripts.Render("~/bundles//jquery")

@{
    ViewBag.Title = "選擇區域";

    /* Show alert message. */
    if (TempData["ErrorMsg"] != null)
    {
        <script>
            var message = @Html.Raw(Json.Encode(TempData["ErrorMsg"]));
            alert(message);
        </script>
    }
}

<style>
    .w3-display-container {
        padding-top: 15px;
        padding-bottom: 15px;
        text-align: center;
    }

    .imgText {
        white-space: normal;
        font-size: 28px;
        font-weight: bold;
        color: orange;
        text-shadow: -1px -1px 0 #000, 1px -1px 0 #000, -1px 1px 0 #000, 1px 1px 0 #000, 2px 2px 2px black;
    }
</style>

<script>
    function confirmToWork(url) {
        var targetUrl = url;
        if (confirm("是否開始巡檢?")) {
            window.location.href = targetUrl;
        }
        else {
        }
    }
</script>

<h2>
    <b>選擇區域</b>
</h2>

<div class="row">
    @foreach (var item in Model)
    {
        <div class="col-md-4">
            <div class="w3-display-container">
                <a href="#" class="w3-button w3-round-large w3-opacity w3-hover-opacity-off" onclick="confirmToWork('@Url.Action("Index", new { areaID = item.AreaID})')">
                    @if (item.AreaID == 4)
                    {
                        <img src="~/Content/Building4.jpg" class="img-responsive w3-round" />
                        <p class="w3-display-middle imgText">@Html.DisplayFor(modelItem => item.AreaName)</p>
                    }
                    else if (item.AreaID == 5)
                    {
                        <img src="~/Content/Building5.jpg" class="img-responsive w3-round" />
                        <p class="w3-display-middle imgText">@Html.DisplayFor(modelItem => item.AreaName)</p>
                    }
                    else
                    {
                        <img src="~/Content/Building1.jpg" class="img-responsive w3-round" />
                        <p class="w3-display-middle imgText">@Html.DisplayFor(modelItem => item.AreaName)</p>
                    }
                </a>
            </div>
        </div>
    }
</div>




